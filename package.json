{
	"name": "autr",
	"version": "0.3.0",
	"main": "main.js",
	"description": "tool to write novels with comfort",
	"author": {
		"name": "Tobias Kavsek",
		"email": "tovuko@hotmail.de"
	},
	"scripts": {
		"ng": "ng",
		"start": "ng serve",
		"build": "ng build",
		"test": "ng test",
		"lint": "ng lint",
		"e2e": "ng e2e",
		"build:prod": "ng build --prod --base-href ./",
		"start:electron": "ng build --base-href ./ && electron .",
		"build:electron:osx": "electron-packager . autr --platform=darwin --arch=x64 --out=build-bin --overwrite icon=assets/icons/64x64.png --ignore=/build-bin --ignore=/build-installer --ignore=/e2e",
		"build:electron:win": "electron-packager . autr --platform=win32 --arch=x64 --out=build-bin --overwrite icon=assets/icons/64x64.png --ignore=/build-bin --ignore=/build-installer --ignore=/e2e",
		"build:electron:linux": "electron-packager . autr --platform=linux --arch=x64 --out=build-bin --overwrite icon=assets/icons/64x64.png --ignore=/build-bin --ignore=/build-installer --ignore=/e2e",
		"pack:osx": "electron-installer-dmg ./build-bin/autr-darwin-x64/autr.app autr --out=build-installer icon=assets/icons/64x64 --overwrite",
		"pack:deb64": "electron-installer-debian --src build-bin/autr-linux-x64 --dest build-installer/ --arch amd64",
		"pack:win": "electron-installer-windows --src build-bin/autr-win32-x64 --dest build-installer/"
	},
	"private": true,
	"dependencies": {
		"@angular/animations": "^8.2.14",
		"@angular/common": "^8.2.14",
		"@angular/compiler": "^8.2.14",
		"@angular/core": "^8.2.14",
		"@angular/forms": "^8.2.14",
		"@angular/platform-browser": "^8.2.14",
		"@angular/platform-browser-dynamic": "^8.2.14",
		"@angular/router": "^8.2.14",
		"npm": "^6.13.6",
		"pdfkit": "^0.11.0",
		"pouchdb": "^7.1.1",
		"pouchdb-find": "^7.1.1",
		"rxjs": "^6.5.4",
		"tslib": "^1.10.0",
		"zone.js": "~0.10.2"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "^0.803.23",
		"@angular/cli": "^8.3.23",
		"@angular/compiler-cli": "^8.2.14",
		"@angular/language-service": "^8.2.14",
		"@types/jasmine": "^3.5.1",
		"@types/jasminewd2": "^2.0.8",
		"@types/node": "^13.1.8",
		"@types/pdfkit": "^0.10.5",
		"@types/pouchdb": "^6.4.0",
		"@types/uuid": "^3.4.6",
		"codelyzer": "^5.2.1",
		"electron": "^11.5.0",
		"electron-installer-debian": "^2.0.1",
		"electron-installer-dmg": "^3.0.0",
		"electron-installer-windows": "^2.0.0",
		"electron-packager": "^14.2.0",
		"jasmine-core": "~3.5.0",
		"jasmine-spec-reporter": "~4.2.1",
		"karma": "~4.4.1",
		"karma-chrome-launcher": "~3.1.0",
		"karma-coverage-istanbul-reporter": "~2.1.1",
		"karma-jasmine": "^3.1.0",
		"karma-jasmine-html-reporter": "^1.5.1",
		"protractor": "~5.4.0",
		"ts-node": "^8.6.2",
		"tslint": "~5.20.1",
		"typescript": "^3.7.5"
	}
}
