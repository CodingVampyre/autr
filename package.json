{
  "name": "autr",
  "version": "0.1.0",
  "main": "main.js",
  "description": "tool to write novels with comfort",
  "author": {
    "name": "Tobias Kavsek",
    "email": "tovuko@hotmail.de"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "start:electron": "ng build --base-href ./ && electron .",
    "build:electron:osx": "ng build --base-href ./ && electron-packager . autr --platform=darwin --arch=x64 --out=build-bin --overwrite icon=assets/icons/64x64.png",
    "build:electron:win": "ng build --base-href ./ && electron-packager . autr --platform=win32 --arch=x64 --out=build-bin --overwrite icon=assets/icons/64x64.png",
    "build:electron:linux": "ng build --base-href ./ && electron-packager . autr --platform=linux --arch=x64 --out=build-bin --overwrite icon=assets/icons/64x64.png",
    "pack:osx": "electron-installer-dmg ./build-bin/autr-darwin-x64/autr.app autr --out=build-installer icon=assets/icons/64x64 --overwrite",
    "pack:deb64": "electron-installer-debian --src build-bin/autr-linux-x64 --dest build-installer/ --arch amd64",
    "pack:win": "electron-installer-windows --src build-bin/autr-win32-x64 --dest build-installer/"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^8.2.14",
    "@angular/common": "^8.2.14",
    "@angular/compiler": "^8.2.14",
    "@angular/core": "^8.2.14",
    "@angular/forms": "^8.2.14",
    "@angular/platform-browser": "^8.2.14",
    "@angular/platform-browser-dynamic": "^8.2.14",
    "@angular/router": "^8.2.14",
    "i": "^0.3.6",
    "nanograph": "^1.0.2",
    "npm": "^6.13.4",
    "pdfkit": "^0.10.0",
    "pouchdb": "^7.1.1",
    "pouchdb-find": "^7.1.1",
    "rxjs": "~6.5.3",
    "tslib": "^1.10.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.803.21",
    "@angular/cli": "^8.3.21",
    "@angular/compiler-cli": "^8.2.14",
    "@angular/language-service": "^8.2.14",
    "@types/jasmine": "~3.5.0",
    "@types/jasminewd2": "^2.0.8",
    "@types/node": "^12.12.21",
    "@types/pdfkit": "^0.10.4",
    "@types/pouchdb": "^6.4.0",
    "@types/uuid": "^3.4.6",
    "codelyzer": "^5.2.1",
    "electron": "^7.1.7",
    "electron-installer-debian": "^2.0.1",
    "electron-installer-dmg": "^3.0.0",
    "electron-installer-windows": "^2.0.0",
    "electron-packager": "^14.1.1",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.4.1",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~2.1.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "protractor": "~5.4.0",
    "ts-node": "~8.5.4",
    "tslint": "~5.20.1",
    "typescript": "~3.5.3"
  }
}
